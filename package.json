{
  "name": "UCSSMonitor",
  "version": "1.0.0",
  "description": "A web app to monitor UCSS data usage",
  "main": "src/main.js",
  "type": "module",
  "scripts": {
    "start": "vue-cli-service serve",
    "build": "vue-cli-service build",
    "generate-graph": "node scripts/generate_graph.js",
    "test": "jest",
    "deploy": "vue-cli-service build && git subtree push --prefix public origin gh-pages"
  },
  "dependencies": {
    "@octokit/rest": "^21.1.1",
    "axios": "^1.8.4",
    "chart.js": "^4.4.8",
    "puppeteer": "^24.4.0",
    "vue": "^3.0.0",
    "vue-chartjs": "^5.3.2"
  },
  "devDependencies": {
    "@jest/expect": "^29.7.0",
    "@vue/cli-service": "^5.0.8",
    "jest": "^29.7.0",
    "jest-circus": "^29.7.0",
    "jest-node-exports-resolver": "^1.1.6"
  },
  "engines": {
    "node": ">=18"
  },
  "jest": {
    "moduleDirectories": [
      "node_modules",
      "src"
